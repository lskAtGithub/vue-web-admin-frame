{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "window.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "mock"
  ],
  "lib": [
    "dom"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "preserveValueImports": false,
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}